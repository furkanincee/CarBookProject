@model List<CarStatus>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araba Durum</h1>

<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Durum</th>
    <th>Sil</th>
    <th>Güncelle</th>
    <th>Araba Detayları</th>
</tr>
@foreach(var item in Model)
    {
        <tr>
            <td>@item.CarStatusId</td>
            <td>@item.CarStatusName</td>
            <td><a href="/CarStatus/RemoveCarStatus/@item.CarStatusId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/CarStatus/UpdateCarStatus/@item.CarStatusId" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-warning">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/CarStatus/CreateCarStatus" class="btn btn-outline-primary">Yeni Araba Durumu Girişi</a>

