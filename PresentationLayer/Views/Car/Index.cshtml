@model List<EntityLayer.Concrete.Car>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araçlar</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Model</th>
        <th>Kategori</th>
        <th>Marka</th>
        <th>Vites Türü</th>
        <th>Yıl</th>
        <th>Araç Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Sitede Gör</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CarId</td>
            <td>@item.Model</td>
            <td>@item.CarCategoryId</td>
            <td>@item.BrandId</td>
            <td>@item.GearType</td>
            <td>@item.Year</td>
            <td>@item.CarStatusId</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-primary">Detaylar</a></td>
            <td><a href="#" class="btn btn-outline-dark">Sitede Gör</a></td>
        </tr>
    }
</table>
<a href="" class="btn btn-outline-primary">Yeni Araç Girişi</a>
