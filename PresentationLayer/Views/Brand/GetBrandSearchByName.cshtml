@model List<Brand>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<form asp-action="GetBrandSearchByName" method="get">
    <div>
        <p>
            <b>Marka Adı Giriniz:</b> 
            <input type="text" name="name" value="@ViewData["CurrentFilter"]"  class="form-control" style="border:1px solid #2222"/>
            <br />
            <input type="submit" class="btn btn-dark"/>
        </p>
    </div>
</form>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Marka Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandId</td>
            <td>@item.BrandName</td>
            <td>@item.Status</td>
            <td><a href="/Brand/Brand/@item.BrandId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Brand/Update/@item.BrandId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary">Yeni Marka Girişi</a>