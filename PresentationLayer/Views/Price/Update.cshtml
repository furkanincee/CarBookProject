@model Price
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Ücretlendirmeyi Güncelle</h1>

<form method="post">
    <input type="hidden" asp-for="PriceId"/>
    <label>Araç</label>
    @Html.DropDownListFor(x=>x.CarId,(List<SelectListItem>)ViewBag.v, new {@class="form-control", @style="border:1px solid #2222"})
    <br />
    <label>Ödeme Planı</label>
    <input type="text" asp-for="PriceType" class="form-control" />
    <br />
    <label>Tutar</label>
    <input type="text" asp-for="PriceValue" class="form-control" />
    <br />
    <button class="btn btn-primary">Ödeme Planını Ekle</button>
</form>
